{
  "name": "dot-platform",
  "version": "1.0.0",
  "scripts": {
    "dev": "cd frontend && pnpm dev",
    "build": "cd frontend && pnpm build",
    "preview": "cd frontend && pnpm preview",
    "deploy": "cd frontend && pnpm build && cd .. && gh-pages -d frontend/dist",
    "install:frontend": "cd frontend && pnpm install",
    "install:backend": "cd backend && pip install -r requirements.txt"
  },
  "dependencies": {
    "@react-three/drei": "^10.3.0",
    "@react-three/fiber": "^9.1.2",
    "react-syntax-highlighter": "^15.6.1",
    "swiper": "^11.2.10",
    "three": "^0.177.0"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "typescript": "^5.8.3"
  }
}
